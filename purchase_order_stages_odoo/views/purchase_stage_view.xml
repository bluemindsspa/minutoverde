<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <record model="ir.ui.view" id="custom_purchase_stage_form_view">
            <field name="name">custom.purchase.order.stage.form.view</field>
            <field name="model">custom.purchase.order.stage</field>
            <field name="arch" type="xml">
                <form>
                    <sheet>
                        <group>
                            <group>
                                <field name="name" />
                            </group>
                            <group>
                                <field name="sequence" />
                            </group>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <record model="ir.ui.view" id="custom_purchase_stage_tree_view">
            <field name="model">custom.purchase.order.stage.tree.view</field>
            <field name="model">custom.purchase.order.stage</field>
            <field name="arch" type ="xml">
                <tree>
                    <field name="name" />
                    <field name="sequence" />
                </tree>
            </field>
        </record>

        <record model="ir.ui.view" id="custom_purchase_stage_search_view">
            <field name="model">custom.purchase.order.stage.filter.view</field>
            <field name="model">custom.purchase.order.stage</field>
            <field name="arch" type ="xml">
                <search>
                    <field name="name" />
                    <field name="sequence" />
                </search>
            </field>
        </record>
  
        <record id="action_custom_purchase_stages" model="ir.actions.act_window">
            <field name="name">Purchase Stages</field>
            <field name="res_model">custom.purchase.order.stage</field>
            <field name="view_mode">tree,form</field>
        </record>

        <menuitem name="Purchase Stages" id="sub_menu_custom_purchase_stages" 
                  parent="purchase.menu_purchase_config" 
                  sequence="22" action="action_custom_purchase_stages"/>

    </data>
</odoo>