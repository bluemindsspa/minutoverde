<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="1">
        <!-- 应用权限目录 -->
        <record model="ir.module.category" id="proc_plan_cat">
            <field name="name">Procurement Plan Group</field>
            <field name="description">Helps you manage your MRP Procurement</field>
            <field name="sequence">8</field>
        </record>
        <!-- 权限用户 -->
        <!-- 普通 -->
        <record id="group_proc_plan_user" model="res.groups">
            <field name="name">Procurement Plan User</field>
            <field name="category_id" ref="proc_plan_cat"/>
            <field name="implied_ids" eval="[
            (4, ref('sales_team.group_sale_salesman_all_leads')),
            (4, ref('purchase.group_purchase_user')),
            (4, ref('stock.group_stock_user')),
            (4, ref('mrp.group_mrp_user')),
            ]"/>
            <field name="comment">The user will be able to view Procurement Plan</field>
        </record>

        <record id="group_proc_plan_manager" model="res.groups">
            <field name="name">Procurement Plan Manager</field>
            <field name="category_id" ref="proc_plan_cat"/>
            <field name="implied_ids" eval="[
            (4, ref('sales_team.group_sale_manager')),
            (4, ref('purchase.group_purchase_manager')),
            (4, ref('stock.group_stock_manager')),
            (4, ref('mrp.group_mrp_manager')),
            (4, ref('group_proc_plan_user')),
            ]"/>
            <field name="comment">The user will be able to manage Procurement Plan</field>
        </record>

        <record id="base.group_erp_manager" model="res.groups">
            <field name="implied_ids" eval="[(4, ref('group_proc_plan_manager'))]"/>
        </record>
        <!--End -->
    </data>
</odoo>
