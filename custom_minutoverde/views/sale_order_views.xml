<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="view_quotation_tree_count_contenedor" model="ir.ui.view">
            <field name="name">view.quotation.tree.count.contenedor</field>
            <field name="model">sale.order</field>
            <field name="inherit_id" ref="sale.view_quotation_tree"/>
            <field name="arch" type="xml">

                <xpath expr="//field[@name='user_id']" position="after">
                    <field name="contenedor_count"/>
                </xpath>

            </field>
        </record>

        <record id="view_order_tree_count_contenedor" model="ir.ui.view">
            <field name="name">view.order.tree.count.contenedor</field>
            <field name="model">sale.order</field>
            <field name="inherit_id" ref="sale.view_order_tree"/>
            <field name="arch" type="xml">

                <xpath expr="//field[@name='user_id']" position="after">
                    <field name="contenedor_count"/>
                </xpath>

            </field>
        </record>

        <record id="view_order_form_count_contenedor" model="ir.ui.view">
            <field name="name">view.order.form.count.contenedor</field>
            <field name="model">sale.order</field>
            <field name="inherit_id" ref="sale.view_order_form"/>
            <field name="arch" type="xml">

                <xpath expr="//field[@name='payment_term_id']" position="after">
                    <field name="contenedor_count"/>
                </xpath>
                <xpath expr="//field[@name='order_line']/tree/field[@name='qty_invoiced']" position="before">
                    <field name="box_per_container"/>
                    <field name="contenedor_name" />
                 </xpath>
            </field>
        </record>

    </data>
</odoo>