<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record model="ir.ui.view" id="product_template_view_inherit_form">
            <field name="name">product.template.view.inherit.form</field>
            <field name="model">product.template</field>
            <field name="inherit_id" ref="product.product_template_only_form_view"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='barcode']" position="after">
                <field name="family_id" placeholder="Agrupación Familia"/>
                <field name="fam_id" placeholder="Familia"/>
                <field name="sub_fam_id" placeholder="Sub Familia"/>
                <field name="categ_fam_id" placeholder="Categoría"/>
                <field name="sub_categ_fam_id" placeholder="Sub Categoría"/>
            </xpath>  
            </field>
        </record>
    </data>
</odoo>

